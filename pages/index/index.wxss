/* popup */
.popup,
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
}

.popup-mask {
  position: absolute;
  z-index: 0;
  background: #000;
  opacity: .6;
}

.popup-content {
  position: relative;
  z-index: 1;
  width: 80%;
  margin: 15vh auto auto;
  padding: 15px 20px;
  background: #fff;
  box-sizing: border-box;
}

.popup-title {
  font-size: 16px;
}

.popup-body {
  font-size: 14px;
  text-align: justify;
}

.popup-input {
  margin-top: 5px;
  margin-bottom: 15px;
  border-bottom: 2px solid #4285f4;
  font-size: 14px;
}

.popup-footer {
  text-align: right;
}

.popup-button {
  display: inline-block;
  margin-left: 5px;
  vertical-align: middle;
  font-size: 14px;
  color: #4285f4;
  background: #fff; 
}

.popup-button:after {
  display: none;
}

.popup-button:hover {
  background: #f8f8f8;
}
