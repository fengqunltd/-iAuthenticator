/* pie */
.pie {
  position: relative;
  width: 14px;
  height: 14px;
  overflow: hidden;
  color: transparent;
  background: #4285f4;
  border-radius: 50%;
}

.pie:after {
  content: '';
  position: absolute;
  left: 50%;
  top: 0;
  z-index: 1;
  width: 50%;
  height: 100%;
  background: #fff;
  border-radius: 0 100% 100% 0 / 50%;
  transform-origin: left;
}

.pie:before {
  content: '';
  position: absolute;
  top: 0;
  z-index: 2;
  width: 50%;
  left: 50%;
  height: 100%;
  border-radius: 0 100% 100% 0 / 50%;
  background-color: inherit;
  transform-origin: left;
  animation: spin 15s linear infinite, bg 30s step-end infinite; 
  animation-play-state: paused;
  animation-delay: inherit;
}

@keyframes spin {
  to { transform: rotate(.5turn); }
}

@keyframes bg {
  50% { background: #fff; }
}

